<nav class="panel">
  <p class="panel-heading">
    Tickets
  </p>
  <div class="panel-block">
    <p class="control has-icons-left">
      <input class="input" type="text" placeholder="Search">
      <span class="icon is-left">
        <i class="fas fa-search" aria-hidden="true"></i>
      </span>
    </p>
  </div>
  <p class="panel-tabs">
    <a href="/admin/ticket" {{#unless (isdefined filter)}}class="is-active" {{/unless}}>All</a>
    <a href="/admin/ticket?filter=open" {{#if (eq filter "open" )}}class="is-active" {{/if}}>Open</a>
    <a href="/admin/ticket?filter=waiting" {{#if (eq filter "waiting" )}}class="is-active" {{/if}}>Waiting</a>
    <a href="/admin/ticket?filter=closed" {{#if (eq filter "closed" )}}class="is-active" {{/if}}>Closed</a>
    <a href="/admin/ticket?filter=locked" {{#if (eq filter "locked" )}}class="is-active" {{/if}}>Locked</a>
  </p>
  {{#each tickets}}
  <a class="panel-block is-active" href="/admin/ticket/{{id}}">
    <span class="panel-icon">
      {{#if (eq status "open")}}
      <i class="fas fa-circle" aria-hidden="true"></i>
      {{else if (eq status "waiting")}}
      <i class="far fa-circle" aria-hidden="true"></i>
      {{else if (eq status "closed")}}
      <i class="far fa-check-circle has-text-success" aria-hidden="true"></i>
      {{else}}
      <i class="fas fa-lock has-text-danger" aria-hidden="true"></i>
      {{/if}}
    </span>
    <span {{#unless (inCommaSeparatedString status "open,waiting" )}}class="has-text-grey-light" {{/unless}}>
      {{title}}
    </span>
    <span class="tag is-{{categoryColour}} ml-2">{{categoryName}}</span>
  </a>
  {{/each}}

</nav>